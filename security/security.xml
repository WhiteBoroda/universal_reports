<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Категорії -->
    <record id="module_category_universal_reports" model="ir.module.category">
        <field name="name">Універсальні звіти</field>
        <field name="sequence">15</field>
    </record>

    <!-- Групи безпеки -->
    <record id="group_universal_reports_user" model="res.groups">
        <field name="name">Користувач звітів</field>
        <field name="category_id" ref="module_category_universal_reports"/>
        <field name="comment">Можливість переглядати та виконувати звіти</field>
    </record>

    <record id="group_universal_reports_author" model="res.groups">
        <field name="name">Автор звітів</field>
        <field name="category_id" ref="module_category_universal_reports"/>
        <field name="implied_ids" eval="[(4, ref('group_universal_reports_user'))]"/>
        <field name="comment">Можливість створювати та редагувати звіти</field>
    </record>

    <record id="group_universal_reports_manager" model="res.groups">
        <field name="name">Менеджер звітів</field>
        <field name="category_id" ref="module_category_universal_reports"/>
        <field name="implied_ids" eval="[(4, ref('group_universal_reports_author'))]"/>
        <field name="comment">Повний доступ до всіх звітів та налаштувань</field>
    </record>

    <!-- Правила безпеки записів -->
    <record id="universal_reports_rule_own" model="ir.rule">
        <field name="name">Власні звіти</field>
        <field name="model_id" ref="model_universal_report_builder"/>
        <field name="domain_force">[
            '|',
                ('user_ids', '=', False),
            '|',
                ('user_ids', 'in', [user.id]),
                ('group_ids_access', 'in', [g.id for g in user.groups_id])
        ]</field>
        <field name="groups" eval="[(4, ref('group_universal_reports_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="universal_reports_rule_author" model="ir.rule">
        <field name="name">Звіти автора</field>
        <field name="model_id" ref="model_universal_report_builder"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
            '|',
                ('user_ids', '=', False),
            '|',
                ('user_ids', 'in', [user.id]),
                ('group_ids_access', 'in', [g.id for g in user.groups_id])
        ]</field>
        <field name="groups" eval="[(4, ref('group_universal_reports_author'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="universal_reports_rule_manager" model="ir.rule">
        <field name="name">Всі звіти для менеджера</field>
        <field name="model_id" ref="model_universal_report_builder"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_universal_reports_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Правила для планувальника -->
    <record id="universal_scheduler_rule_own" model="ir.rule">
        <field name="name">Власні планувальники</field>
        <field name="model_id" ref="model_universal_report_scheduler"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
                ('report_id.user_ids', 'in', [user.id])
        ]</field>
        <field name="groups" eval="[(4, ref('group_universal_reports_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="universal_scheduler_rule_author" model="ir.rule">
        <field name="name">Планувальники автора</field>
        <field name="model_id" ref="model_universal_report_scheduler"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
            '|',
                ('report_id.create_uid', '=', user.id),
                ('report_id.user_ids', 'in', [user.id])
        ]</field>
        <field name="groups" eval="[(4, ref('group_universal_reports_author'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="universal_scheduler_rule_manager" model="ir.rule">
        <field name="name">Всі планувальники для менеджера</field>
        <field name="model_id" ref="model_universal_report_scheduler"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_universal_reports_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

