<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Шаблон виджета конструктора отчетов -->
    <template id="report_builder_widget_template" name="ReportBuilderWidget">
        <div class="report-builder-container">
            <div class="row">
                <div class="col-md-12">
                    <h3>Конструктор отчетов</h3>
                </div>
            </div>

            <div class="row">
                <!-- Выбор модели -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>1. Выберите модель данных</h5>
                        </div>
                        <div class="card-body">
                            <select class="form-control model-selector" t-on-change="onModelChange">
                                <option value="">-- Выберите модель --</option>
                                <option t-foreach="availableModels" t-as="model"
                                        t-att-value="model.id" t-esc="model.name"/>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Поля отчета -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>2. Выберите поля</h5>
                        </div>
                        <div class="card-body">
                            <div class="available-fields">
                                <h6>Доступные поля:</h6>
                                <div t-foreach="state.availableFields" t-as="field"
                                     class="field-item" t-on-click="() => this.addField(field)">
                                    <i class="fa fa-plus text-success"></i>
                                    <span t-esc="field.string"/> (<t t-esc="field.type"/>)
                                </div>
                            </div>

                            <div class="selected-fields mt-3">
                                <h6>Выбранные поля:</h6>
                                <div t-foreach="state.selectedFields" t-as="field"
                                     class="field-item selected">
                                    <i class="fa fa-minus text-danger"
                                       t-on-click="() => this.removeField(field.name)"></i>
                                    <span t-esc="field.label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Фильтры и настройки -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>3. Настройте фильтры</h5>
                        </div>
                        <div class="card-body">
                            <button class="btn btn-sm btn-secondary mb-2"
                                    t-on-click="addFilter">
                                <i class="fa fa-plus"></i> Добавить фильтр
                            </button>

                            <div t-foreach="state.filters" t-as="filter"
                                 t-key="filter_index" class="filter-row">
                                <div class="row">
                                    <div class="col-4">
                                        <select class="form-control form-control-sm"
                                                t-model="filter.field">
                                            <option value="">Поле</option>
                                            <option t-foreach="state.availableFields"
                                                    t-as="field" t-att-value="field.name"
                                                    t-esc="field.string"/>
                                        </select>
                                    </div>
                                    <div class="col-3">
                                        <select class="form-control form-control-sm"
                                                t-model="filter.operator">
                                            <option value="=">=</option>
                                            <option value="!=">!=</option>
                                            <option value="&gt;">&gt;</option>
                                            <option value="&lt;">&lt;</option>
                                            <option value="like">содержит</option>
                                        </select>
                                    </div>
                                    <div class="col-4">
                                        <input class="form-control form-control-sm"
                                               t-model="filter.value" placeholder="Значение"/>
                                    </div>
                                    <div class="col-1">
                                        <button class="btn btn-sm btn-danger"
                                                t-on-click="() => this.removeFilter(filter_index)">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Кнопки действий -->
            <div class="row mt-3">
                <div class="col-md-12 text-center">
                    <button class="btn btn-primary btn-lg btn-execute"
                            t-on-click="executeReport"
                            t-att-disabled="!state.selectedModel || state.selectedFields.length === 0">
                        <i class="fa fa-play"></i> Выполнить отчет
                    </button>

                    <button class="btn btn-secondary btn-lg ml-2"
                            t-on-click="saveAsTemplate">
                        <i class="fa fa-save"></i> Сохранить как шаблон
                    </button>

                    <button class="btn btn-info btn-lg ml-2"
                            t-on-click="previewReport">
                        <i class="fa fa-eye"></i> Предварительный просмотр
                    </button>
                </div>
            </div>

            <!-- Результаты -->
            <div class="row mt-4" t-if="state.reportData">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Результаты отчета</h5>
                            <div class="float-right">
                                <button class="btn btn-sm btn-success"
                                        t-on-click="() => this.exportReport('excel')">
                                    <i class="fa fa-file-excel-o"></i> Excel
                                </button>
                                <button class="btn btn-sm btn-danger"
                                        t-on-click="() => this.exportReport('pdf')">
                                    <i class="fa fa-file-pdf-o"></i> PDF
                                </button>
                                <button class="btn btn-sm btn-info"
                                        t-on-click="() => this.exportReport('csv')">
                                    <i class="fa fa-file-text-o"></i> CSV
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th t-foreach="state.selectedFields"
                                                t-as="field" t-esc="field.label"/>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="state.reportData" t-as="record">
                                            <td t-foreach="state.selectedFields" t-as="field"
                                                t-esc="record[field.name] || ''"/>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="text-muted mt-2">
                                Найдено записей: <strong t-esc="state.reportData.length"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- Шаблон мастера планировщика -->
    <template id="report_scheduler_wizard_template" name="ReportSchedulerWizard">
        <div class="scheduler-wizard">
            <h4>Планировщик отчетов</h4>

            <form>
                <div class="form-group">
                    <label>Название задачи:</label>
                    <input type="text" class="form-control" t-model="state.name" required="true"/>
                </div>

                <div class="form-group">
                    <label>Интервал выполнения:</label>
                    <div class="row">
                        <div class="col-6">
                            <input type="number" class="form-control"
                                   t-model="state.intervalNumber" min="1"/>
                        </div>
                        <div class="col-6">
                            <select class="form-control" t-model="state.intervalType">
                                <option value="minutes">минут</option>
                                <option value="hours">часов</option>
                                <option value="days">дней</option>
                                <option value="weeks">недель</option>
                                <option value="months">месяцев</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Время выполнения:</label>
                    <input type="time" class="form-control" t-model="state.executionTime"/>
                </div>

                <div class="form-group" t-if="state.intervalType === 'weeks'">
                    <label>День недели:</label>
                    <select class="form-control" t-model="state.weekday">
                        <option value="0">Понедельник</option>
                        <option value="1">Вторник</option>
                        <option value="2">Среда</option>
                        <option value="3">Четверг</option>
                        <option value="4">Пятница</option>
                        <option value="5">Суббота</option>
                        <option value="6">Воскресенье</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Email получатели (по одному на строку):</label>
                    <textarea class="form-control" t-model="state.emailRecipients"
                              rows="3" placeholder="user@example.com"></textarea>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input"
                           t-model="state.attachReport" id="attachReport"/>
                    <label class="form-check-label" for="attachReport">
                        Прикреплять отчет к письму
                    </label>
                </div>
            </form>
        </div>
    </template>
</odoo>