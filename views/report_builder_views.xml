<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Список звітів -->
    <record id="view_universal_report_builder_tree" model="ir.ui.view">
        <field name="name">universal.report.builder.tree</field>
        <field name="model">universal.report.builder</field>
        <field name="arch" type="xml">
            <tree string="Звіти" create="true" edit="true" delete="true"
                  decoration-muted="not active" decoration-bf="is_template">
                <field name="name"/>
                <field name="model_id"/>
                <field name="format_type"/>
                <field name="last_execution" optional="show"/>
                <field name="result_count" optional="show"/>
                <field name="execution_time" optional="hide"/>
                <field name="is_template" optional="hide"/>
                <field name="active" optional="hide"/>
                <field name="color" invisible="1"/>
                <button name="action_execute_report" type="object"
                        string="Виконати" class="btn-primary"
                        icon="fa-play" title="Виконати звіт"
                        invisible="not active"/>
<!--                <button name="action_duplicate" type="object"-->
<!--                        string="Копіювати" class="btn-secondary"-->
<!--                        icon="fa-copy" title="Створити копію"/>-->
            </tree>
        </field>
    </record>

    <!-- Канбан представлення -->
    <record id="view_universal_report_builder_kanban" model="ir.ui.view">
        <field name="name">universal.report.builder.kanban</field>
        <field name="model">universal.report.builder</field>
        <field name="arch" type="xml">
            <kanban string="Звіти" default_group_by="format_type" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="model_id"/>
                <field name="format_type"/>
                <field name="last_execution"/>
                <field name="result_count"/>
                <field name="is_template"/>
                <field name="active"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Редагувати</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Видалити</a>
                                    </t>
<!--                                    <a name="action_duplicate" type="object" class="dropdown-item">Копіювати</a>-->
                                    <a name="action_create_scheduler" type="object" class="dropdown-item">Планувальник</a>
                                </div>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                            <t t-if="record.is_template.raw_value">
                                                <span class="badge badge-info">Шаблон</span>
                                            </t>
                                        </strong>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <i class="fa fa-database"/> <t t-esc="record.model_id.value"/>
                                    </div>
                                    <t t-if="record.last_execution.raw_value">
                                        <div class="text-muted">
                                            <i class="fa fa-clock-o"/> Останнє: <t t-esc="record.last_execution.value"/>
                                        </div>
                                        <div class="text-muted">
                                            <i class="fa fa-list"/> Записів: <t t-esc="record.result_count.value"/>
                                        </div>
                                    </t>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <button name="action_execute_report" type="object"
                                                class="btn btn-primary btn-sm"
                                                t-if="record.active.raw_value">
                                            <i class="fa fa-play"/> Виконати
                                        </button>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="!record.active.raw_value">
                                            <span class="badge badge-secondary">Неактивний</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Форма звіту -->
    <record id="view_universal_report_builder_form" model="ir.ui.view">
        <field name="name">universal.report.builder.form</field>
        <field name="model">universal.report.builder</field>
        <field name="arch" type="xml">
            <form string="Конструктор звітів">
                <header>
                    <button name="action_execute_report" type="object"
                            string="Виконати звіт" class="btn-primary"
                            invisible="not active"/>
                    <button name="action_duplicate" type="object"
                            string="Створити копію" class="btn-secondary"
                            invisible="not id"/>
                    <button name="action_create_scheduler" type="object"
                            string="Планувальник" class="btn-info"
                            invisible="not id"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" icon="fa-list-alt"
                                name="%(action_universal_report_scheduler)d"
                                context="{'search_default_report_id': id, 'default_report_id': id}"
                                invisible="not id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Планувальники</span>
                            </div>
                        </button>

                        <button class="oe_stat_button" type="object"
                                name="action_duplicate" icon="fa-copy"
                                invisible="not id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Копіювати</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Шаблон" bg_color="bg-info"
                            invisible="not is_template"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Назва звіту"/>
                        </h1>
                        <div class="o_row">
                            <field name="is_template"/>
                            <label for="is_template"/>
                        </div>
                    </div>

                    <group>
                        <group name="basic_info">
                            <field name="model_id" options="{'no_create': True, 'no_create_edit': True}"
                                   required="1"/>
                            <field name="format_type"/>
                            <field name="export_formats"/>
                            <field name="color"/>  <!-- убрали widget="color" -->
                        </group>
                        <group name="statistics" string="Статистика">
                            <field name="last_execution" readonly="1"/>
                            <field name="result_count" readonly="1"/>
                            <field name="execution_time" readonly="1"/>
                        </group>
                    </group>

                    <field name="description" placeholder="Опис звіту..."/>

                    <notebook>
                        <page string="Поля звіту" name="fields">
                            <!-- ИСПРАВЛЕННАЯ секция с полями -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5>Поля отчета</h5>
                                        <button name="action_add_fields_wizard" type="object"
                                                string="Добавить поля" class="btn btn-primary"
                                                icon="fa-plus"
                                                invisible="not model_id"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Показываем сообщение если нет полей -->
                            <div class="alert alert-info" role="alert"
                                 invisible="field_ids">
                                <h6><i class="fa fa-info-circle"/> Поля не добавлены</h6>
                                <p>Нажмите кнопку "Добавить поля" чтобы выбрать поля для отчета.</p>
                                <p class="mb-0">Сначала выберите модель данных, затем добавляйте поля.</p>
                            </div>

                            <!-- Таблица полей -->
                            <field name="field_ids" context="{'default_report_id': id}"
                                   invisible="not field_ids">
                                <tree editable="bottom" decoration-muted="not visible"
                                      create="false" delete="true">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name" readonly="1"/>
                                    <field name="field_label"/>
                                    <field name="field_type" readonly="1"/>
                                    <field name="visible"/>
                                    <field name="width" optional="hide"/>
                                    <field name="aggregation" optional="hide"/>
                                    <field name="format_type"/>
                                    <field name="decimal_places"
                                           invisible="format_type not in ['number', 'currency']"/>
                                </tree>
                                <form string="Налаштування поля">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="field_name" readonly="1"/>
                                                <field name="field_label"/>
                                                <field name="field_type" readonly="1"/>
                                                <field name="visible"/>
                                                <field name="sequence"/>
                                            </group>
                                            <group>
                                                <field name="format_type"/>
                                                <field name="aggregation"/>
                                                <field name="width"/>
                                                <field name="decimal_places"
                                                       invisible="format_type not in ['number', 'currency']"/>
                                                <field name="thousands_separator"
                                                       invisible="format_type not in ['number', 'currency']"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Фільтри" name="filters">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5>Фильтры отчета</h5>
                                <button name="action_add_filter" type="object"
                                        string="Добавить фильтр" class="btn btn-secondary btn-sm"
                                        icon="fa-filter"/>
                            </div>

                            <field name="filter_ids" context="{'default_report_id': id}">
                                <tree editable="bottom" decoration-muted="not active">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="field_name"/>
                                    <field name="field_type" readonly="1"/>
                                    <field name="operator"/>
                                    <field name="value"/>
                                    <field name="value_type"/>
                                    <field name="active"/>
                                    <field name="required"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Групування" name="groups">
                            <field name="group_ids" context="{'default_report_id': id}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name"/>
                                    <field name="field_label"/>
                                    <field name="show_totals"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Сортування" name="sorts">
                            <field name="sort_ids" context="{'default_report_id': id}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name"/>
                                    <field name="direction"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Права доступу" name="access"
                              groups="universal_reports.group_universal_reports_manager">
                            <group>
                                <field name="user_ids" widget="many2many_tags"
                                       help="Користувачі, які мають доступ до цього звіту"/>
                                <field name="group_ids_access" widget="many2many_tags"
                                       help="Групи, які мають доступ до цього звіту"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Увага!</strong> Якщо не вказано жодних користувачів або груп,
                                звіт буде доступний всім користувачам.
                            </div>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_create_new_report" model="ir.actions.act_window">
        <field name="name">Створити новий звіт</field>
        <field name="res_model">universal.report.builder</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{
            'default_is_template': False,
            'form_view_initial_mode': 'edit'
        }</field>
        <!-- Принудительно НЕТ RES_ID -->
        <field name="res_id" eval="False"/>
    </record>

    <!-- Пошук звітів -->
    <record id="view_universal_report_builder_search" model="ir.ui.view">
        <field name="name">universal.report.builder.search</field>
        <field name="model">universal.report.builder</field>
        <field name="arch" type="xml">
            <search string="Пошук звітів">
                <field name="name" string="Назва"/>
                <field name="model_id" string="Модель"/>
                <field name="description" string="Опис"/>

                <filter name="active" string="Активні" domain="[('active', '=', True)]"
                        help="Показати тільки активні звіти"/>
                <filter name="inactive" string="Неактивні" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="templates" string="Шаблони" domain="[('is_template', '=', True)]"
                        help="Показати тільки шаблони звітів"/>
                <filter name="reports" string="Звіти" domain="[('is_template', '=', False)]"/>
                <separator/>
                <filter name="my_reports" string="Мої звіти"
                        domain="['|', ('create_uid', '=', uid), ('user_ids', 'in', uid)]"
                        help="Звіти, створені мною або доступні мені"/>
                <filter name="recent" string="Останні виконані"
                        domain="[('last_execution', '!=', False)]"/>
                <separator/>
                <filter name="table_reports" string="Таблиці" domain="[('format_type', '=', 'table')]"/>
                <filter name="pivot_reports" string="Зведені таблиці" domain="[('format_type', '=', 'pivot')]"/>
                <filter name="chart_reports" string="Графіки" domain="[('format_type', '=', 'chart')]"/>

                <group expand="0" string="Групування">
                    <filter name="group_by_model" string="По моделі"
                            context="{'group_by': 'model_id'}"/>
                    <filter name="group_by_format" string="По типу"
                            context="{'group_by': 'format_type'}"/>
                    <filter name="group_by_author" string="По автору"
                            context="{'group_by': 'create_uid'}"/>
                    <filter name="group_by_template" string="По типу (шаблон/звіт)"
                            context="{'group_by': 'is_template'}"/>
                </group>

                <searchpanel>
                    <field name="model_id" string="Модель" icon="fa-database" limit="200"/>
                    <field name="format_type" string="Тип звіту" icon="fa-chart-bar"/>
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="action_universal_report_builder" model="ir.actions.act_window">
        <field name="name">Конструктор звітів</field>
        <field name="res_model">universal.report.builder</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_universal_report_builder_search"/>
        <field name="context">{
            'search_default_active': 1,
            'search_default_reports': 1,
            'default_is_template': False
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Створіть ваш перший звіт!
            </p>
            <p>
                Універсальний генератор звітів дозволяє створювати
                довільні звіти по будь-яких даних в системі.
            </p>
            <p>
                Ви можете:
                <ul>
                    <li>Вибрати будь-яку модель даних</li>
                    <li>Налаштувати поля для відображення</li>
                    <li>Додати фільтри та сортування</li>
                    <li>Експортувати у різні формати</li>
                </ul>
            </p>
        </field>
    </record>


    <record id="action_all_reports" model="ir.actions.act_window">
        <field name="name">Всі звіти</field>
        <field name="res_model">universal.report.builder</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_universal_report_builder_search"/>
        <field name="context">{}</field>
    </record>



    <record id="action_universal_report_templates" model="ir.actions.act_window">
        <field name="name">Шаблони звітів</field>
        <field name="res_model">universal.report.builder</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_template', '=', True)]</field>
        <field name="context">{'default_is_template': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Створіть шаблон звіту!
            </p>
            <p>
                Шаблони звітів можна використовувати як основу
                для створення нових звітів.
            </p>
        </field>
    </record>

    <!-- Дія для звітів -->

</odoo>