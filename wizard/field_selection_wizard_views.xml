<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Форма мастера выбора полей -->
    <record id="view_field_selection_wizard_form" model="ir.ui.view">
        <field name="name">report.field.selection.wizard.form</field>
        <field name="model">report.field.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Выбор полей для отчета">
                <sheet>
                    <div class="oe_title">
                        <h2>Добавить поля в отчет</h2>
                        <p>Модель: <field name="model_id" readonly="1"/></p>
                    </div>

                    <group>
                        <field name="report_id" invisible="1"/>
                        <field name="field_selection_ids" nolabel="1">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="selected"/>
                                <field name="field_label"/>
                                <field name="field_name"/>
                                <field name="field_type"/>
                            </tree>
                        </field>
                    </group>
                </sheet>

                <footer>
                    <button name="action_add_selected_fields" type="object"
                            string="Добавить выбранные поля" class="btn-primary"/>
                    <button string="Отмена" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Действие для мастера -->
    <record id="action_field_selection_wizard" model="ir.actions.act_window">
        <field name="name">Выбор полей</field>
        <field name="res_model">report.field.selection.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>