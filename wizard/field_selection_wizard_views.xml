<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_field_selection_wizard_form" model="ir.ui.view">
        <field name="name">report.field.selection.wizard.form</field>
        <field name="model">report.field.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Добавить поля в отчет">
                <sheet>
                    <div class="oe_title">
                        <h2>Добавить поля в отчет</h2>
                        <p class="text-muted">
                            Модель: <field name="model_id" readonly="1" nolabel="1"/>
                        </p>
                    </div>

                    <!-- Скрытые поля -->
                    <group invisible="1">
                        <field name="report_id"/>
                        <field name="total_fields_count"/>
                        <field name="selected_fields_count"/>
                    </group>

                    <!-- Быстрые действия -->
                    <div class="mb-3">
                        <button name="action_select_all" type="object"
                                string="Выбрать все"
                                class="btn btn-sm btn-outline-primary"/>
                        <button name="action_deselect_all" type="object"
                                string="Снять все"
                                class="btn btn-sm btn-outline-secondary"/>
                        <button name="action_select_basic_fields" type="object"
                                string="Основные поля"
                                class="btn btn-sm btn-outline-success"/>
                    </div>

                    <!-- Счетчики -->
                    <div class="alert alert-info mb-3">
                        <div class="row">
                            <div class="col-6">
                                <strong>Доступно полей:</strong>
                                <span class="badge badge-info">
                                    <field name="total_fields_count" readonly="1" nolabel="1"/>
                                </span>
                            </div>
                            <div class="col-6">
                                <strong>Выбрано:</strong>
                                <span class="badge badge-success">
                                    <field name="selected_fields_count" readonly="1" nolabel="1"/>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- ТАБЛИЦА НА ПОЛНУЮ ШИРИНУ -->
                    <field name="field_selection_ids" nolabel="1">
                        <tree editable="false" create="false" delete="false"
                              decoration-success="selected">
                            <field name="selected" widget="boolean_toggle" string="✓"/>
                            <field name="field_label" string="Название поля"/>
                            <field name="field_name" string="Системное имя"/>
                            <field name="field_type_display" string="Тип"/>
                            <field name="field_type" invisible="1"/>
                            <field name="is_required" string="Обязательное"/>
                            <field name="help_text" string="Описание"/>
                        </tree>
                    </field>

                    <!-- Подсказка -->
                    <div class="alert alert-light mt-3">
                        <p class="mb-0">
                            <i class="fa fa-lightbulb-o text-warning"/>
                            <strong>Подсказка:</strong> Выберите поля галочкой и нажмите "Добавить поля".
                            Уже добавленные в отчет поля здесь не показываются.
                        </p>
                    </div>
                </sheet>

                <footer>
                    <button name="action_add_selected_fields" type="object"
                            string="Добавить поля"
                            class="btn-primary"/>
                    <button string="Отмена" special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

